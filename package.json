{
  "private": true,
  "scripts": {
    "prepare": "./commands/init.sh && husky install",
    "build": "turbo run build",
    "dev": "turbo run dev dev_pages generate --parallel",
    "dev:beta": "turbo run dev dev_apps generate --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "graphql-codegen --watch"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.0",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-graphql-request": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.0",
    "@graphql-codegen/typescript-react-query": "^4.0.6",
    "eslint": "^8.0.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "turbo": "latest",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "apps/web/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.1.1",
    "graphql": "^16.6.0"
  }
}
